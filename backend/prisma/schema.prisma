// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  COMPANY
}

enum Tag {
  MINIMALMODERN
  CONTEMPORARYMODERN
  MODERNLUXURY
  MODERNSTYLE
  MIDCENTURYMODERN
  VINTAGESTYLE
  LOFTINDUSTRALSTYLE
  SCANDINAVIANSTYLE
  ARTDECO
  MIXANDMATCH
}

enum Gender {
  MALE
  FEMALE
  UNSPECIFIED
}

model User {
  userId        String @id @default(uuid())
  username      String @unique
  password      String
  role          Role
  email         String
  registeredAt  DateTime @default(now())

  company       Company[]
  customer      Customer[]
}

model Company {
  companyId       Int @id @default(autoincrement())
  companyname     String
  companypersonId Int
  address         String
  sub_district    String
  district        String
  province        String
  contact         String
  rateprice       Int
  tag             Tag

  userCompany     User @relation(fields: [userId], references: [userId])
  userId          String
} 

model Customer {
  customerId      Int @id @default(autoincrement())
  firstname       String
  lastname        String
  gender          Gender
  dateOfBirth     String
  citizenId       String @unique
  province        String 
  district        String
  sub_district    String
  address         String
  contact         String

  userCustomer    User @relation(fields: [userId],references: [userId])
  userId          String
}